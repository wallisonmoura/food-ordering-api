generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id             String           @id @default(uuid())
  name           String
  description    String
  price          Float
  imageUrl       String
  category       String
  customizations Json             // armazenamos como JSON
  createdAt      DateTime         @default(now())
}
